  - job_name: 'kube-state-metrics'
    scrape_interval: 30s
    honor_labels: true
    metrics_path: '/federate'
    params:
      'match[]':
        - '{job="kube-state-metrics"}'
    static_configs:
      - targets:
        - 'prometheus-dev.xxx.com'
