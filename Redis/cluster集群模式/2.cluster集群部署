1.编译
mkdir -p  /app/redis-cluster/{bin,conf,data,logs,pid)

wget http://download.redis.io/releases/redis-5.0.2.tar.gz && tar zxvf redis-5.0.2.tar.gz
cd redis-5.0.2/  && make 
cp src/redis-server /app/redis-cluster/bin/
cp src/redis-cli /app/redis-cluster/bin/
2.创建目录
mkdir -p /app/redis-cluster/data/800{1..6}
3.修改配置
cp redis-5.0.2/redis.conf /redis-cluster/conf/8001.conf

############
cat /app/redis-cluster/conf/8001.conf

daemonize yes
pidfile "/app/redis-cluster/pid/8001.pid"
port 8001
tcp-backlog 511
bind 10.204.51.64
timeout 180
repl-timeout 30
tcp-keepalive 60
loglevel notice
logfile "/app/redis-cluster/logs/8001.log"
databases 16
save 86400 1
stop-writes-on-bgsave-error no
rdbcompression yes
rdbchecksum yes
dbfilename "8001.rdb"
dir "/app/redis-cluster/data/8001"
slave-serve-stale-data yes
slave-read-only yes
repl-diskless-sync no
repl-diskless-sync-delay 5
repl-disable-tcp-nodelay no
slave-priority 100
requirepass "K6CJDjjnE9d0OxRjYNKZ"
maxclients 6000
maxmemory 17179869184
maxmemory-policy volatile-lru
maxmemory-samples 3
appendonly no
appendfilename "8001.aof"
appendfsync everysec
no-appendfsync-on-rewrite no
auto-aof-rewrite-percentage 100
auto-aof-rewrite-min-size 64mb
aof-load-truncated yes
lua-time-limit 5000
lazyfree-lazy-expire yes
slowlog-log-slower-than 10000
slowlog-max-len 1024
latency-monitor-threshold 0
notify-keyspace-events "gxE"
hash-max-ziplist-entries 512
hash-max-ziplist-value 64
list-max-ziplist-entries 512
list-max-ziplist-value 64
set-max-intset-entries 512
zset-max-ziplist-entries 128
zset-max-ziplist-value 64
hll-sparse-max-bytes 3000
activerehashing yes
client-output-buffer-limit normal 10mb 5mb 10
client-output-buffer-limit slave 256mb 64mb 60
client-output-buffer-limit pubsub 32mb 8mb 60
hz 10
repl-backlog-size 1gb

aof-rewrite-incremental-fsync yes
rename-command keys noallowkeys
rename-command flushall noallowflushall
rename-command flushdb  noallowflushdb
rename-command shutdown  noallowshutdown
rename-command monitor  noallowmonitor
rename-command debug  noallowdebug
rename-command save  noallowsave
# Generated by CONFIG REWRITE

#CLUSTER CONFIG
cluster-enabled yes
cluster-node-timeout 15000
cluster-config-file "8001.conf"
cluster-require-full-coverage no

# Generated by CONFIG REWRITE
masterauth "K6CJDjjnE9d0OxRjYNKZ"
############
4.新增其他节点
cp 8001.conf 8002.conf
cp 8001.conf 8003.conf
cp 8001.conf 8004.conf
cp 8001.conf 8005.conf
cp 8001.conf 8006.conf

sed -i 's/8001/8002/g' 8002.conf
sed -i 's/8001/8003/g' 8003.conf
sed -i 's/8001/8004/g' 8004.conf
sed -i 's/8001/8005/g' 8005.conf
sed -i 's/8001/8006/g' 8006.conf

5.启动节点
/app/redis-cluster/bin/redis-server  /app/redis-cluster/conf/8001.conf
/app/redis-cluster/bin/redis-server  /app/redis-cluster/conf/8002.conf
/app/redis-cluster/bin/redis-server  /app/redis-cluster/conf/8003.conf
/app/redis-cluster/bin/redis-server  /app/redis-cluster/conf/8004.conf
/app/redis-cluster/bin/redis-server  /app/redis-cluster/conf/8005.conf
/app/redis-cluster/bin/redis-server  /app/redis-cluster/conf/8006.conf

6.创建集群
/app/redis-cluster/bin/redis-cli -a K6CJDjjnE9d0OxRjYNKZ --cluster create --cluster-replicas 1 10.204.51.64:8001 10.204.51.64:8002 10.204.51.64:8003 10.204.51.64:8004 10.204.51.64:8005 10.204.51.64:8006

7.查看集群状态
app/redis-cluster/bin/redis-cli -a K6CJDjjnE9d0OxRjYNKZ -c -h 10.204.51.64 -p 8001

